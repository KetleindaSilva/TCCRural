<!DOCTYPE html>
<html>

<head>
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <link href="/style/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</head>

<body>
    <div class="container " >
        <div class="row align-items-center">
          <div class="col-md-10 mx-auto col-lg-6">
            <form class="p-3 p-md-5 rounded-3 formulario" style="border:2px solid #19401B;" method="post" action="/registro">
    
              <div class="row container mb-3 justify-content-center">
                <img class="w-50 align-items-center rounded-circle" src="/imagens/RURAL MARKET.png" alt="">
                <div class="justify-content-center">
                  <h3 class="text-center mt-2 shadow p-2 mb-5 bg-transparent rounded" style="color:#2dd94d;">Seja Bem-Vindo</h3>
                  <h5 class="text-center" style="color:#19401B;">Crie sua conta</h5>
                </div>
              </div>
                
                            <div class="form-group">
                                <label for="nome">Nome:</label>
                                <input type="text" name="nome" id="nome" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="email" id="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="senha">Senha:</label>
                                <input type="password" name="senha" id="senha" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn1 mt-3 text-white">Registrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function capitalizeFirstLetter() {
          var input = document.getElementById('nome');
          var texto = input.value;
        
          if (texto.length > 0) {
            var textoFormatado = texto.charAt(0).toUpperCase() + texto.slice(1).toLowerCase();
            input.value = textoFormatado;
          }
        }
        </script>
</body>

</html>